{
  "browser_action": {
    "browser_style": true,
    "default_title": "Alfred",
    "default_popup": "popup.html",

    "default_icon": {
      "32": "icons/bowler.svg"
    }
  },

  "applications": {
    "gecko": {
      "id": "alfredfirefox@deanishe.net",
      "strict_min_version": "70.0"
    }
  },

  "permissions": [
    "<all_urls>",
    "bookmarks",
    "downloads",
    "history",
    "tabs",
    "nativeMessaging"
  ],

  "background": {
    "scripts": ["alfred.js"],
    "persistent": true
  },

  "icons": {
    "32": "icons/bowler-black.svg",
    "48": "icons/bowler-black.svg",
    "96": "icons/bowler-black.svg",
    "128": "icons/bowler-black.svg"
  },

  "manifest_version": 2,
  "name": "Alfred Integration",
  "version": "1.0.1",
  "description": "Integrates Firefox with Alfred."
}

